<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :url, "URL" %>
  <.error
    field={:url}
    input_name="url"
    errors={@changeset.errors}
    class="pt-2 pl-4 pr-4 ml-2 text-center"
  />
  <%= text_input f, :url %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
